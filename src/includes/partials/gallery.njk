<div class="gallery new" id="gallery">
{% for imageSrc in homepageGallery -%}
  <picture class="gallery__item homepage gallery__item--{{loop.index}}">
    <a href="/portfolio" style="display: contents">
    <source srcset="{{ imageSrc }}" />
      <img loading="lazy" id="video{{loop.index}}" src="{{ imageSrc }}" class="gallery__img" alt="Image {{loop.index}}">
    </a>
  </picture>
{% endfor -%}
</div>

{% set js %}
  {% include "../../index.js" %}
{% endset %}
<!-- feed it through our jsmin filter to minify -->
<script>
  {{ js | jsmin | safe }}
</script>